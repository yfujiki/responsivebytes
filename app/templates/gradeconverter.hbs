<div id="converter-button" class="converter">
    <button {{action 'openModalConverter'}} type="button" class="btn btn-default btn-lg">
      <span class="glyphicon glyphicon-modal-window"></span> Converter
    </button>
</div>
<table id="conversion-table" class="table table-striped table-bordered">
    <thead>
        <tr>
            {{#each model.filteredNames as |name|}}
            <th>{{name}}</th>
            {{/each}}
        </tr>
    </thead>
    <tbody>
        <tr>
            {{#each model.filteredCategories as |category|}}
            <td>{{category}}</td>
            {{/each}}
        </tr>
        {{#each model.filteredGrades as |grade|}}
        <tr>
            {{#each grade as |gradePerSystem|}}
            <td>{{gradePerSystem}}</td>
            {{/each}}
        </tr>
        {{/each}}
    </tbody>
</table>
<div class={{converterDisplayMode}}>
  <div class="modal-content">
    <span class="close" aria-label="Close" {{action 'closeModalConverter'}}>
        &times;
    </span>
    <br/><br/>
    {{conversion-panel model=model id="1"}}
  </div>
</div>
<div id="conversion-panel-block">
    {{conversion-panel model=model id="2"}}    
</div>
<div class="app-store-link"><a href="https://itunes.apple.com/us/app/rock-climbing-grade-converter/id1250294132?mt=8"><img src="../assets/images/App_Store_Badge_US-UK_135x40.svg"/></a></div>
{{outlet}}
